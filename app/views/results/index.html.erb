<header>
  <% if flash.notice %>
  <div class="alert alert-info text-center mb-0 rounded-0 alert-dismissible fade show">
    <%= flash.notice %>
    <button class="close" data-dismiss="alert">
      &times;
    </button>
  </div>
  <% end %>
  <%= render partial: 'results/form' %>
</header>
<main>
  <h2 class="my-3 mx-5 font-weight-bold"><%= current_user.name %>さんの閲覧履歴</h2>
  <div class="mt-3 mb-3 mx-5">
    <table class="table table-hover">
      <% @search_histories.each do |search_history| %>
      <thead>
        <tr>
          <th>施設名：<%= search_history.place_name %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Googleの星評価：<%= search_history.star_ave %></td>
        </tr>
        <tr>
          <td>厳選された星評価：<%= search_history.credible_star_ave %></td>
        </tr>
        <tr>
          <td><%= link_to "詳細へ", result_path(search_history.result_id) %></td>
        </tr>
  </div>
  <% end %>
  </tbody>
  </table>
</main>
</body>
